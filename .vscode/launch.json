    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env" :{ "PYTHONPATH" : ":/home/aleksey/Coding/concurrency-in-python-with-asyncio/util" }
        },

        {
            "name": "Python Debugger: Attach using Process ID",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            }
        }
    ]
}